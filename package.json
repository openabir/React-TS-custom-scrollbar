{
  "name": "react-custom-scrollbar",
  "version": "1.0.0",
  "description": "A lightweight, customizable React scrollbar component with TypeScript support, accessibility features, and cross-browser compatibility",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "benchmark": "node -r @babel/register benchmarks/scrollbar.bench.js",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "react",
    "scrollbar",
    "custom-scrollbar",
    "typescript",
    "scroll",
    "ui-component",
    "react-component",
    "accessibility",
    "a11y",
    "cross-browser",
    "lightweight",
    "customizable"
  ],
  "author": {
    "name": "openabir",
    "url": "https://github.com/openabir"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openabir/React-TS-custom-scrollbar.git"
  },
  "bugs": {
    "url": "https://github.com/openabir/React-TS-custom-scrollbar/issues"
  },
  "homepage": "https://github.com/openabir/React-TS-custom-scrollbar#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/register": "^7.28.3",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "benchmark": "^2.1.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-test-renderer": "^19.1.1",
    "rollup": "^2.79.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
